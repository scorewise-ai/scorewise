# Environment Variables Template
# Copy this file to .env and fill in your actual values
# Place this file in the root directory of your project

# Application Settings
SECRET_KEY=your-secret-key-here-generate-a-strong-random-string
DEBUG=False

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_or_live_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_or_live_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_from_stripe_dashboard

# Stripe Price IDs (get these from your Stripe Dashboard)
PRICE_ID_STANDARD=price_your_standard_plan_price_id
PRICE_ID_PRO=price_your_pro_plan_price_id
PRICE_ID_ENTERPRISE=price_your_enterprise_plan_price_id

# Perplexity AI Configuration
PERPLEXITY_API_KEY=pplx-your-perplexity-api-key

# Application URLs (update these for production)
BASE_URL=http://localhost:8000
FRONTEND_URL=http://localhost:8000

# File Upload Settings (optional customization)
MAX_FILE_SIZE=10485760  # 10MB in bytes
UPLOAD_DIR=uploads

# Security Settings
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# For production deployment on Render
PORT=8000